{% if tabAuthors is empty %}
<h3>The table is empty</h3>
{% else %}
<table border="1">
    <tr>
        <th>Id</th>
        <th>NbBooks</th>
        <th>Action</th>
    </tr>
    {% for i in tabAuthors %}
        <tr>
            <td>{{ i.id }}</td>
            <td>{{ i.nbrBooks }}</td>
            <td><a href="#">Show +</a></td>

        </tr>
    {% endfor %}
</table>
{% endif %}
Nbr Authors = {{ tabAuthors|length }} <br>


